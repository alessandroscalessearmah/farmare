<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="header-content">
            <block class="Magento\Customer\Block\Account\Customer" name="header.customer.drawer" as="customer-drawer" template="Magento_Customer::header/customer-drawer.phtml">
                <block class="Magento\Customer\Block\Form\Login" name="customer-drawer-login" template="Magento_Theme::html/forms/login.phtml">
                    <container name="form.additional.info" as="form_additional_info"/>
                </block>
                <block class="Magento\Customer\Block\Form\Login\Info" name="drawer-customer-new" template="Magento_Theme::html/forms/newcustomer.phtml"/>
            </block>
        </referenceBlock>
    </body>
</page>
